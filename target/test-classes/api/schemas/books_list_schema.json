{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Book",
  "type": "array",
  "properties": {
    "id": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "pageCount": {
      "type": "integer"
    },
    "excerpt": {
      "type": "string"
    },
    "publishDate": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "pageCount",
    "publishDate"
  ],
  "additionalProperties": false
}
